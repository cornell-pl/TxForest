  (depends
    ("async" (>= "v0.12.0"))
    ("core" (>= "v0.12.0"))
    ("dune" (and :build (>= "2.4")))
    ("ocaml" (>= "4.10"))
    ("menhir" (>= "20200211"))
    ("ppx_deriving" (>= "4.4.1"))
    ("ppx_deriving_yojson" (>= "3.5.2"))
  )
)

